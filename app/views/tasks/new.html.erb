<h1> Create a Task </h1>

<%= form_for @task do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.label :description %>
    <%= f.text_field :description %>

    <%= f.label :category_id %>
    <%= f.collection_select :category_id, Category.all, :id, :category_name %>

    <%= f.label :timer_id %>
    <%= f.collection_select :timer_id, Timer.all, :id, :minutes %>

    <%= f.submit %>

<% end %>