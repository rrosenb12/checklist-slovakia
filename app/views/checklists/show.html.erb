<%= @checklist.title %>

<h3>Time to Complete: <%=@checklist.total_time%> minutes </h3>
<%= button_to "start timer" %>
<h2> Upcoming Tasks: </h2>
<p>
<ul><% @checklist.tasks.each do |task| %>
	<li><%= task.name %></li>
<% end %>
</ul>
</p>

<h1> Add a Task to a Checklist </h1>

<%= form_for @task_checklist do |f| %>
    <%= f.label :task_id %>
    <%= f.collection_select :task_id, Task.all, :id, :name %>

    <%= f.hidden_field :checklist_id, value: @checklist.id %>

    <%= f.submit %>

<% end %>

<p>Delete this checklist?</p>
<%= button_to 'delete checklist', @checklist, method: :delete %>