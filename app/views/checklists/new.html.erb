<h1>Make a new Checklist</h1>

<%= form_for @checklist do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %>

    <%= f.label :category_id %>
    <%= f.collection_select :category_id, Category.all, :id, :category_name %>

    <%= f.collection_select :task_name, Task.all, :name, :name %>

    <%= f.submit %>
<% end %>