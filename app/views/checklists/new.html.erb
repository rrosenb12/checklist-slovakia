<h1>Make a new Checklist</h1>

<%= form_for @checklist do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %>

    <%= f.label :category_id %>
    <%= f.collection_select :category_id, Category.all, :id, :category_name %>

    <%= fields_for :tasks do |ff| %>
    
    <%= ff.label :name %>
    <%= ff.collection_select :name, Task.all, :id, :name %>

    <% end %>

    <%= f.submit %>
<% end %>